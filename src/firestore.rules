
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Admin role is now disabled. No user has admin privileges.
    function isAdmin() {
      return request.auth.token.email == "admin@gmail.com";
    }

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if false; 
      allow create: if isOwner(userId);
      allow update, delete: if isOwner(userId);

      match /profiles/{profileId} {
        allow read, write: if isOwner(userId);
      }

      match /favorites/{collegeId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /colleges/{collegeId} {
        allow read: if isSignedIn();
        // Allow create for any signed-in user.
        allow create: if isSignedIn();
        // Allow update/delete only if the user is the one who manages the college or is an admin.
        allow update, delete: if request.auth.uid == resource.data.managedBy || isAdmin();
        // Public list is fine, but admin can see all.
        allow list: if isSignedIn();
    }
  }
}
